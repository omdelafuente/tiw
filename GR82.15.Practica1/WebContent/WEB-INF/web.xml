<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>GR82.15.Practica1</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>es.uc3m.tiw.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/editProfile.jsp</url-pattern>
    <url-pattern>/createEvent.jsp</url-pattern>
    <url-pattern>/editEvent.jsp</url-pattern>
    <url-pattern>/myCreatedEvent.jsp</url-pattern>
    <url-pattern>/buyTicket.jsp</url-pattern>
  </filter-mapping>
  <error-page>
  	<error-code>500</error-code>
  	<location>/errorNotFound.jsp</location>
  </error-page>
  <error-page>
  	<error-code>404</error-code>
  	<location>/errorNotFound.jsp</location>
  </error-page>
  
</web-app>